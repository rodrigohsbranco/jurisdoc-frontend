{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "preserve",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "composite": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "types": ["vite/client", "node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "env.d.ts"]
}
